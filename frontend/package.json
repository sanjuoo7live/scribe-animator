{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@resvg/resvg-js": "2.6.2",
    "@resvg/resvg-wasm": "^2.6.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "konva": "^9.3.22",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-konva": "^19.0.7",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "vtracer-wasm": "^0.1.0",
    "web-vitals": "^2.1.4",
    "zustand": "^5.0.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:animations": "node ../../scripts/test-animations.js",
    "test:animation-system": "react-scripts test --testPathPattern=AnimationSystem.test.tsx --watchAll=false",
    "postinstall": "node scripts/copy-vtracer-wasm.js || echo 'skip vtracer copy'; node scripts/copy-resvg-wasm.js || echo 'skip resvg copy'",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "DESIGN_TOKEN": "off",
      "@salesforce/design-token": "off",
      "slds/design-token": "off",
      "react-hooks/rules-of-hooks": "off",
      "react-hooks/exhaustive-deps": "off",
      "no-restricted-imports": [
        "error",
        {
          "patterns": [
            {
              "group": ["**/domain/**"],
              "importNames": ["React", "useState", "useEffect"],
              "message": "Domain layer should not directly use React hooks. Use application services."
            },
            {
              "group": ["**/ui/**"],
              "importNames": ["axios", "fetch"],
              "message": "UI layer should not make direct API calls. Use application services."
            },
            {
              "group": ["**/infra/**"],
              "importNames": ["React"],
              "message": "Infrastructure layer should not contain React components."
            }
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3001",
  "devDependencies": {
    "tailwindcss": "3"
  }
}
